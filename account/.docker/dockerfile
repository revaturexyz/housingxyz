# account :: docker

## arguments
ARG DOTNET_VERSION=3.0

## stage - restore
FROM mcr.microsoft.com/dotnet/core/sdk:${DOTNET_VERSION} as restore
WORKDIR /src
COPY src/Xyz.AccountService/*.csproj Revature.Account.Api/
COPY src/Xyz.AccountService.DataAccess/*.csproj Revature.Account.DataAccess/
COPY src/Revature.Account.Lib/*.csproj Revature.Account.Lib/
RUN dotnet restore *.Api

## stage - publish
FROM restore as publish
COPY src/Xyz.AccountService/ Revature.Account.Api/
COPY src/Xyz.AccountService.DataAccess/ Revature.Account.DataAccess/
COPY src/Xyz.AccountService.Lib/ Revature.Account.Lib/
RUN dotnet publish *.Api --configuration Release --no-restore --output /src/dist

## stage - deploy
FROM mcr.microsoft.com/dotnet/core/aspnet:${DOTNET_VERSION} as deploy
WORKDIR /api
ENV ASPNETCORE_URLS=http://+:80
EXPOSE 80
COPY --from=publish /src/dist/ ./
CMD dotnet *.Api.dll
